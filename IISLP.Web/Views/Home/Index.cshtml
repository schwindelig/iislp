@model IISLP.Web.Models.UploadFilesVM

<div class="row">
    <div class="col-md-12">
        <h2>Upload</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @{
                        var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors.Select(b => b.ErrorMessage));
                    }
                    @foreach (var item in errors)
                    {
                        <li>@item</li>
                    }
                </ul>

            </div>
        }


        <form method="post" asp-action="Index" asp-controller="Home" enctype="multipart/form-data" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2">Log files</label>
                <div class="col-sm-10">
                    <label class="btn btn-primary" for="Files">
                        <input asp-for="Files" type="file" name="Files" multiple style="display:none;" />
                        Select Files
                    </label>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2">Log format</label>
                <div class="col-sm-10">
                    <select asp-for="Format" class="form-control">
                        <option value="0">W3C (Default IIS log format)</option>
                        <option value="1">IIS</option>
                        <option value="2">NCSA</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input type="submit" value="Analyze" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>
